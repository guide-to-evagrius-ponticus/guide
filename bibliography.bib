@article{kruger_zum_1960,
	title = {Zum theologischen {Menschenbild} {Babais} den {Großen} nach seinem noch unveröffentlichten {Kommentar} zu den beiden {Sermones} des {Mönches} {Markus} über \textit{{Das} geistige {Gesetz}}},
	volume = {44},
